---
import ImgWomenClothing1 from "../../assets/clothing/women_clothing/casaca_impermeable_larga_mujer_verde_bosque.webp";
import ImgMenClothing1 from "../../assets/clothing/men_clothing/casaca_casual_con_bolsillos_hombre_khaki.webp";
---

<section class="categorias px-32 md:px-48 py-8">
  <h2 class="text-2xl font-bold mb-8 text-center">Categorías</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
    <div class="text-center">
      <img
        src={ImgWomenClothing1.src}
        alt="Moda para ella"
        class="w-full h-auto object-cover mb-4"
      />
      <a
        href="/para-ella"
        class="inline-block px-8 py-3 bg-[#333333] text-white rounded-lg font-semibold uppercase
          transition-all duration-300 ease-in-out
          hover:bg-opacity-90 hover:shadow-lg
          transform hover:scale-105"
      >
        Para Ella
      </a>
    </div>
    <div class="text-center">
      <img
        src={ImgMenClothing1.src}
        alt="Moda para él"
        class="w-full h-auto object-cover mb-4"
      />
      <a
        href="/para-el"
        class="inline-block px-8 py-3 bg-[#333333] text-white rounded-lg font-semibold uppercase
          transition-all duration-300 ease-in-out
          hover:bg-opacity-90 hover:shadow-lg
          transform hover:scale-105"
      >
        Para Él
      </a>
    </div>
  </div>
</section>
